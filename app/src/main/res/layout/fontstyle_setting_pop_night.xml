<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@color/nightbg_252525"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.onemena.widght.HelveBoldTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="right|center"
            android:text="إعدادات الخط"
            android:textSize="20sp"
            android:textColor="@color/textcolor_707070"
            />
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="صغير"
                android:textColor="@color/textcolor_707070"
                android:button="@null"
                android:textSize="16sp"
                android:drawableRight="@drawable/btn_radio_selector"
                android:gravity="left|center"
                android:id="@+id/sty_1"
                android:layout_gravity="center"
                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sty_2"
                android:text="طبيعي"
                android:textSize="16sp"
                android:button="@null"
                android:textColor="@color/textcolor_707070"
                android:drawableRight="@drawable/btn_radio_selector"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_marginTop="24dp"
                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" كبير"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:id="@+id/sty_3"
                android:textColor="@color/textcolor_707070"
                android:button="@null"
                android:drawableRight="@drawable/btn_radio_selector"
                android:gravity="center|left"
                android:layout_marginTop="24dp"
                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الأكبر"
                android:textSize="16sp"
                android:button="@null"
                android:drawableRight="@drawable/btn_radio_selector"
                android:layout_gravity="center"
                android:id="@+id/sty_4"
                android:gravity="center|left"
                android:layout_marginTop="24dp"
                android:textColor="@color/textcolor_707070"
                />
        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <com.onemena.widght.HelveRomanTextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إلغاء"
                android:gravity="center"
                android:textColor="@color/textcolor_707070"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>