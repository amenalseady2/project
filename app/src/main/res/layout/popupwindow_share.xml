<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <GridView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:verticalSpacing="30dp"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@color/listViewBG"
        android:divider="@null"
        android:numColumns="4"
       />

    <View
        android:id="@+id/show_pop_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7fe4e7f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center">

        <com.onemena.widght.HelveRomanTextView
            android:id="@+id/actionbar_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_item_click_selector"
            android:gravity="center"
            android:text="إلغاء"
            android:textColor="@color/textcolor_64697b"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>