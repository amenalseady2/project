<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="540px"
        android:layout_height="240px"
        android:background="@drawable/shape_white_6dp"
        app:night_background="@drawable/shape_white_6dp_night">

        <com.onemena.widght.HelveRomanTextView
            android:id="@+id/tv_not_follow_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60px"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black_222222"
            android:textSize="34px"
            app:night_textColor="@color/textcolor_707070" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="150px"
            android:background="@color/gray_e3e3e3"
            app:night_background="@color/textcolor_707070" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="88px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150px"
            android:background="@color/gray_e3e3e3"
            app:night_background="@color/textcolor_707070" />

        <com.onemena.widght.HelveRomanTextView
            android:id="@+id/tv_cancel"
            android:layout_width="270px"
            android:layout_height="88px"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/fine_news_cancel"
            android:textColor="@color/black_222222"
            android:textSize="34px"
            app:night_textColor="@color/nighttxt_707070" />


        <com.onemena.widght.HelveRomanTextView
            android:id="@+id/tv_confirm"
            android:layout_width="270px"
            android:layout_height="88px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/fine_news_confirm"
            android:textColor="@color/black_222222"
            android:textSize="34px"
            app:night_textColor="@color/nighttxt_707070" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>