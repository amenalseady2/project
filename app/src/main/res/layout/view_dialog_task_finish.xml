<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="396px"
        android:layout_height="wrap_content"
        android:background="@drawable/task_gold_bg"
        android:minHeight="200px">

    <ImageView
        android:id="@+id/pb_loding"
        android:layout_marginTop="40px"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/pulic_toast_gold"
        app:night_src="@mipmap/pulic_toast_gold_night" />

    <com.onemena.widght.HelveRomanTextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pb_loding"
        android:layout_marginTop="18px"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="26px"
        android:layout_marginBottom="20px"
        app:night_textColor="@color/nighttxt_707070" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>