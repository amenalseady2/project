<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root_viewgroup"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.onemena.widght.HelveRomanTextView
        android:id="@+id/video_list_comment"
        android:layout_alignParentRight="true"
        android:background="@drawable/common_red_btn_selector_night"
        android:textColor="#252525"
        android:text="@string/popwinright"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="30dp" />
    <com.onemena.widght.HelveRomanTextView
        android:text="@string/popwinleft"
        android:textSize="14sp"
        android:textColor="#707070"
        android:layout_width="wrap_content"
        android:layout_height="64px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <GridView
        android:id="@+id/gridview"
        android:layout_below="@id/video_list_comment"
        android:numColumns="2"
        android:layout_marginTop="12dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="8dp"
       android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </GridView>



</RelativeLayout>