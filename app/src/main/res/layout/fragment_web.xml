<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_bule"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:night_background="@color/main_bule_night">

        <com.onemena.widght.HelveRomanTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mycenter_ys"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:night_textColor="@color/nighttxt_707070" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/details_navbar_back"
            app:night_src="@mipmap/details_navbar_back_night" />
    </RelativeLayout>

    <WebView
        android:id="@+id/web_privay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>
</LinearLayout>