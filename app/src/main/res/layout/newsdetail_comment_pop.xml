<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/activity_bg_f5"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_comment"
        android:background="@drawable/edittext_bg"
        android:layout_width="match_parent"
        android:minLines="3"
        android:maxLines="3"
        android:gravity="right|top"
        android:inputType="textMultiLine"
        android:hint="شارك برأيك..."
        android:maxLength="4000"
        android:textColorHint="@color/textcolor_d0d2dd"
        android:textSize="16sp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.onemena.widght.NotoRegularTextView
            android:id="@+id/tv_user_name"
            android:textColor="@color/textcolor_a1a6bb"
            android:text="Roger Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/num_limit"
            android:textColor="@color/textcolor_a1a6bb"
            android:text="٠"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.onemena.widght.HelveRomanTextView
            android:id="@+id/comment_ok"
            android:background="@drawable/common_e8_btn_selector"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/textcolor_a1a6bb"
            android:text="نشر"
            android:layout_width="96dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>