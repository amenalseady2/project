<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head_detail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/menu_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@mipmap/details_navbar_more" />

            <TextView
                android:id="@+id/title_newsdetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/details_navbar_back_day" />

        </LinearLayout>

        <TextView
            android:id="@+id/toolbar_divider_h"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bordercolor_D8D8D8" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:focusableInTouchMode="false"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingRight="18dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical">
                    <com.onemena.widght.HelveRomanTextView
                        android:layout_width="wrap_content"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_marginRight="6dp"
                        android:id="@+id/detail_offline_com"
                        android:layout_height="wrap_content"
                        android:text="اخترنا لك"/>
                    <TextView
                        android:id="@+id/detail_offline_line"
                        android:layout_width="2dp"
                        android:layout_height="12dp"
                        android:background="@color/txt_D2D5E1"
                        />
                </LinearLayout>

                <com.onemena.widght.HelveBoldTextView
                    android:id="@+id/txt_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    app:night_textColor="@color/textcolor_707070"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="15dp"
                    android:text="dasdasdasdasdasd"
                    android:paddingRight="18dp"
                    android:textSize="22dp" />

                <!--<com.mysada.news.widght.MyWebView-->
                <!--android:id="@+id/web_view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginTop="20dp"></com.mysada.news.widght.MyWebView>-->

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>