<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:night_background="@color/nightbg_252525">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/main_bule"
        app:night_background="@color/main_bule_night">

        <com.onemena.widght.HelveRomanTextView
            android:id="@+id/text_task_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="@string/task_list_title"
            android:textColor="@color/white"
            android:textSize="36px"
            app:night_textColor="@color/nighttxt_707070" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22px"
            android:src="@mipmap/details_navbar_back"
            app:night_src="@mipmap/details_navbar_back_night" />
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="102px"
            android:visibility="gone"
            android:src="@mipmap/details_navbar_close_market"
            app:night_src="@mipmap/details_navbar_close_market" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/web_gold_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:night_background="@color/textcolor_707070" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/lay_error_h5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:night_background="@color/nightbg_252525">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/details_failed_to_load_img"
                app:night_src="@mipmap/details_failed_to_load_img_night" />

            <com.onemena.widght.HelveRomanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/点击加载数据"
                android:textColor="@color/textcolor_a1a6bb"
                android:textSize="18dp"
                app:night_textColor="@color/textcolor_707070" />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/lay_loading_h5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:night_background="@color/nightbg_252525">
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>