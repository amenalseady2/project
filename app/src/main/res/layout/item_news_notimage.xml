<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/style4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="16dp">


    <com.onemena.widght.HelveBoldTextView
        android:id="@+id/title4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:gravity="center_vertical|right"
        android:maxLines="3"
        android:text=" عادة نشر بيانات صحفية دو"
        android:textColor="@color/textcolor_222328"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp">


        <ImageView
            android:id="@+id/show_pop_iv_4"
            android:layout_width="66dp"
            android:layout_height="26dp"
            android:padding="5dp"
            android:src="@mipmap/home_delete_2" />
        <TextView
            android:id="@+id/txt_zan_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8px"
            android:gravity="center_vertical"
            android:text="34k"
            android:textColor="@color/textcolor_a1a6bb"
            android:textSize="12sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_time_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24px"
            android:text="البيت"
            android:textColor="@color/textcolor_a1a6bb"
            android:textSize="12sp" />




        <ImageView
            android:id="@+id/img_like_4"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="24px"
            android:visibility="gone"
            android:src="@mipmap/home_list_comment" />


        <com.onemena.widght.NotoRegularTextView
            android:id="@+id/txt_com_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8px"
            android:text="منصب"
            android:textColor="@color/textcolor_a1a6bb"
            android:textSize="12sp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_com_4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/home_from"
            android:visibility="invisible"
            fresco:roundAsCircle="true" />


        <ImageView
            android:id="@+id/iv_top_4"
            android:layout_width="24dp"
            android:layout_height="14dp"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/home_list_top"
            android:layout_marginRight="16dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lcoal_diver_4"
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:background="@color/txt_e4e7f0"
        fresco:night_background="@color/txt_464646"
        android:layout_height="2px"
        />
</LinearLayout>