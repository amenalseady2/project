<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <solid android:color="#88ffffff" />
            <stroke
                android:width="0.5dp"
                android:color="@color/bordercolor_CBCBCB"></stroke>
            <corners
                android:radius="60px" /> </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#88ffffff" />
            <stroke
                android:width="0.5dp"
                android:color="@color/bordercolor_CBCBCB"></stroke>


            <corners
                android:radius="60px"/> </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ffffff"
                />
            <stroke
                android:width="0.5dp"
                android:color="@color/bordercolor_CBCBCB"></stroke>
            <corners
                android:radius="60px"
                 />
        </shape>
    </item>

</selector>