<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true"><shape>
        <solid android:color="#ffffff" />
        <stroke
            android:width="0.5dp"
            android:color="#EB4E35"
            />

        <padding android:bottom="5dp"
            android:left="5dp"
            android:right="5dp"
            android:top="5dp" />

        <corners android:bottomLeftRadius="20px"
            android:bottomRightRadius="20px"
            android:topLeftRadius="20px"
            android:topRightRadius="20px" />
    </shape></item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/activity_bg_f5" />
            <stroke
                android:width="0.5dp"
                android:color="#3e84e0"
                />

            <padding android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

            <corners android:bottomLeftRadius="20px"
                android:bottomRightRadius="20px"
                android:topLeftRadius="20px"
                android:topRightRadius="20px" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke
                android:width="0.5dp"
                android:color="#E4E7F0"
                />

            <padding android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

            <corners android:bottomLeftRadius="20px"
                android:bottomRightRadius="20px"
                android:topLeftRadius="20px"
                android:topRightRadius="20px" />
        </shape>
    </item>

</selector>